<div class="container mt-5">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <div class="card">
                <div class="card-body">
                    
                    {{!-- Titulo insertar nuevo servicio a vehiculo --}}
                    <div class="add-head">
                        <span class="addServ-title card-title">INSTERTAR NUEVO SERVICIO</span>
                        <a class="abtn float-end" href="/"><i class="fa-solid fa-reply"></i></a>
                    </div>
                    
                    {{!-- Form inservar nuevo servicio a vehiculo --}}
                    <form class="mt-4" id="car-form" action="/addServ/{{car._id}}" method="POST">
                        <div class="mb-3">
                            <input name="fecha" id="fecha" type="text" class="form-control" autocomplete="off" placeholder="fecha">
                        </div>
                        <div class="mb-3">
                            <input name="servicio" id="servicio" type="text" class="form-control" autocomplete="off" placeholder="servicio">
                        </div>

                        {{!-- button guardar servicio de vehiculo --}}
                        <div>
                            <button class="btn btn-success float-end"><i class="fa-solid fa-floppy-disk"></i></button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>