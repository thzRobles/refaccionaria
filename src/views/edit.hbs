                        <div class="mb-3">
                            <input name="serie" id="serie" type="text" class="form-control" autocomplete="off" placeholder="serie" value="{{car.serie}}">
                        </div>
                        <div class="mb-3">
                            <input name="placas" id="placas" type="text" class="form-control" autocomplete="off" placeholder="placas" value="{{car.placas}}">
                        </div>
                        <div class="mb-3">
                            <input name="marca" id="marca" type="text" class="form-control" autocomplete="off" placeholder="marca" value="{{car.marca}}">
                        </div>
                        <div class="mb-3">
                            <input name="modelo" id="modelo" type="text" class="form-control" autocomplete="off" placeholder="modelo" value="{{car.modelo}}">
                        </div>
                        <div class="mb-3">
                            <input name="anio" id="anio" type="text" class="form-control" autocomplete="off" placeholder="aÃ±o" value="{{car.anio}}">
                        </div>

                        {{!-- Button guardar datos nuevos de vehiculo --}}
                        <div>
                            <button class="btn btn-success float-end"><i class="fa-solid fa-floppy-disk"></i></button>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
