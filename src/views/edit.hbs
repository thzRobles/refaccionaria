<div class="container mt-5">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <div class="card">
                <div class="card-body">

                    {{!-- Titulo editar datos de vehiculo --}}
                    <div class="add-head">
                        <span class="edit-title card-title">ACTUALIZAR DATOS</span>
                        <a class="abtn float-end" href="/"><i class="fa-solid fa-reply"></i></a>
                    </div>

                    {{!-- Form editar datos de vehiculo --}}
